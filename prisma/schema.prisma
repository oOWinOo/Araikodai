generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  name            String
  password        String
  birthDate       DateTime
  telephoneNumber String
  profileImage    String?
  Discount        Discount? @relation(fields: [discountId], references: [id])
  discountId      Int?
}

model Admin {
  username String @unique
  password String
}

model Discount {
  id        Int    @id @default(autoincrement())
  type      String
  value     String
  userID    User[]
  remaining Int    @default(-1)
}

model Hotel {
  id        Int       @id @default(autoincrement())
  name      String
  address   String
  imageURL  String
  telephone String
  detail    String
  rooms     Room[]
  Booking   Booking[]
}

model Room {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  imageURL    String
  price       Float
  occupancy   Int
  Hotel       Hotel     @relation(fields: [hotelId], references: [id])
  hotelId     Int
  booking     Booking[]
}

model Booking {
  id          Int      @id @default(autoincrement())
  Hotel       Hotel    @relation(fields: [hotelId], references: [id])
  hotelId     Int
  Room        Room?    @relation(fields: [roomId], references: [id])
  roomId      Int?
  startdate   DateTime
  bookingDays Int      @default(1)
}
